<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/cyan300"
                android:centerColor="#00BCD4"
                android:centerY="0.75"
                android:endColor="@color/cyan400"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/blueLight100"
                    android:centerColor="@color/blueLight300"
                    android:centerY="0.75"
                    android:endColor="@color/blueLight200"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/yellowA200"
                    android:endColor="@color/yellow600"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>