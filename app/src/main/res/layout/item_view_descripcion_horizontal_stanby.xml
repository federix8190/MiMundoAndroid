<py.com.personal.mimundo.widget.itemview.DescripcionHorizontalItemViewStanby
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mm_descripcion1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Prueba 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/mm_descripcion2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:singleLine="true"
        android:textColor="@color/black_secundary"
        android:text="Prueba_2"
        android:textSize="16sp"
        android:ellipsize="end" />

</py.com.personal.mimundo.widget.itemview.DescripcionHorizontalItemViewStanby>
