<py.com.personal.mimundo.widget.itemview.DescripcionImagenHorizontalItemViewStanby xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/mm_descripcion1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Prueba 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/mm_imagen1"

            android:layout_width="32dp"
            android:layout_height="32dp" />
    </LinearLayout>

</py.com.personal.mimundo.widget.itemview.DescripcionImagenHorizontalItemViewStanby>
