<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese un número de línea"
        android:textColor="@color/titulo_secundario_lista"
        android:paddingLeft="16dp"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/numero_regalar_pack"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/numero_linea_hint_pedir_saldo"
        android:inputType="number"
        android:singleLine="true"
        android:textColorHint="@color/common_signin_btn_dark_text_disabled" />

</LinearLayout>