<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scroll_club_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/club_personal_fondo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="75"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:background="@color/personal_verde"
                        android:paddingLeft="32dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/billetera_logo" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title_1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="40"
                                android:text="billetera"
                                android:textColor="@color/white"
                                android:textSize="34dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/title_2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="60"
                                android:text=" personal"
                                android:textColor="@color/white"
                                android:textSize="32dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0dip"
                        android:layout_weight="25"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/billetera_personal_msg_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/billetera_personal_msg_1"
                    android:textColor="@color/gray600"
                    android:paddingTop="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/billetera_personal_msg_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/billetera_personal_msg_2"
                    android:textColor="@color/gray600"
                    android:padding="16dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="32dp"
                android:background="@color/celeste_institucional" />

            <TextView
                android:id="@+id/billetera_personal_msg_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/billetera_personal_msg_3"
                android:textColor="@color/celeste_institucional"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/billetera_personal_msg_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/billetera_personal_msg_4"
                android:textColor="@color/gray600"
                android:paddingTop="8dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="32dp"
                android:background="@color/celeste_institucional" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/button_descargar_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:src="@drawable/billetera_btn" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
