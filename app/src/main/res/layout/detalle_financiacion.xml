<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_1"
                style="@style/subEncabezado1"
                android:text="@string/cabecera_detalle_financion_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/gray300"
                android:paddingBottom="16dp" />

            <ListView
                android:id="@+id/cabeceraDetalleFinanciacion"
                style="@style/listaNoSeleccionableSinDivider" />

            <TextView
                android:id="@+id/titulo_2"
                style="@style/subEncabezado1"
                android:text="@string/detalles_cuotas_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/gray300"
                android:paddingBottom="16dp" />

            <ListView
                android:id="@+id/cuotasDetalleFinanciacion"
                style="@style/listaNoSeleccionableSinDivider" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>