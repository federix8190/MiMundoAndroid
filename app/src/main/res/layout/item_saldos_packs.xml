<?xml version="1.0" encoding="utf-8"?>

<py.com.personal.mimundo.disenhos.RelativeLayout1 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:gravity="center_vertical|left">

    <ImageView
        android:id="@+id/icono"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/pack"
        android:gravity="center_vertical|left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:minHeight="72dp"
        android:orientation="vertical"
        android:paddingLeft="80dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="@color/titulo_primario_lista"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="0dip"
                android:layout_weight="80"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textColor="@color/titulo_secundario_lista"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iconoColapsable"
                android:layout_width="0dip"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</py.com.personal.mimundo.disenhos.RelativeLayout1>
